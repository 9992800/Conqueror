package com.jctx.chat.module;

import java.util.HashMap;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Component;

@Component
public class OnlineUsersManager extends HashMap<String, OnlineUserEntity>{
	
	private static final long serialVersionUID = -7557693084400834486L;
	
	private static final int capacity = 10000;
	
	private static final Logger logger =
		    LoggerFactory.getLogger(OnlineUsersManager.class);	

	
	public OnlineUsersManager(){
		super(capacity);
	}

	public void OfflineUser(String userId){
		OnlineUserEntity entity = this.get(userId);
		if (null == entity){
			logger.warn("------Offline failed: the user("+userId+") has already offline");
			return;
		}
		
		entity.offline();
		
		this.remove(userId);
	}
	
	public void OnlineUser(String userId, OnlineUserEntity entity){
		
		entity.online();
		
		this.put(userId, entity);
	}

	public void sendMessageToTarget(String fromUid, String targetUid, String payload) {
		
		OnlineUserEntity entity = this.get(fromUid);
		
		if (null == entity){
			logger.warn("------Send message failed: the sender("+ fromUid+") has offline");
			return;
		}
		
		entity.sendMessage(targetUid, payload);		 
	}

	public void keepalive(String sessionId) {
		OnlineUserEntity entity = this.get(sessionId);
		
		if (null == entity){
			logger.warn("------Keep alive action failed: the entity("+ sessionId+") is offline");
			return;
		}
		
		entity.keepalive();		
	}
	
}
