<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jctx.chat.friends.apply" >

	<resultMap id="BaseResultMap" type="com.jctx.chat.module.FriendsApplication" >
		<id column="fromuid" property="fromuid" jdbcType="INTEGER"/>
		<id column="touid" property="touid" jdbcType="INTEGER" /> 
		<result column="status" property="status" jdbcType="TINYINT" /> 
		<result column="createTime" property="createTime" jdbcType="TIMESTAMP" /> 
		<result column="updateTime" property="updateTime" jdbcType="TIMESTAMP" /> 
	</resultMap>
	
	<sql id="Base_Column_List" >
	 	fromuid, touid, status, createTime, updateTime
	</sql>
	
	 
	 <insert id="addApply"  parameterType="map" >
	 
	 	INSERT INTO jctx_friends_apply
	 	
	 		(fromuid, touid, status)
	 		
	 	VALUES
	 	
	 		(#{fromuid}, #{touid}, 0)
	 		
	 </insert>
	 
	 
	 
	 <update id="gotApproved"  parameterType="map">
	 	
	 	UPDATE jctx_friends_apply
	 	
	 	<set>
	 		status = 1
	 	</set>
	 	
	 	<where> 
	 		fromuid = #{fromuid} AND 
	 		
	 		touid = #{touid} AND
	 		
	 		status = 0
	 	</where>
	 	
	 </update>
	 
	 <select id="getApplicantToMe" parameterType="java.lang.Integer"  resultMap="BaseResultMap" >
	 	
	 	SELECT  <include refid="Base_Column_List" /> 
	 	
	 	FROM jctx_friends_apply
	 	
	 	<where>
	 		touid = #{value} AND
	 		
	 		status = 0
	 	</where>
	 	
	 </select>
	 
</mapper>
