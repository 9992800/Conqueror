<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jctx.chat.chatgroup.base" >

	<resultMap id="BaseResultMap" type="com.jctx.chat.module.ChatGroupBean" >
		<id column="groupId" property="groupId" jdbcType="INTEGER" />
		<result column="creatorUid" property="creatorUid" jdbcType="INTEGER" />
		<result column="groupName" property="groupName" jdbcType="VARCHAR" /> 
		<result column="memNum" property="memNum" jdbcType="INTEGER" />
		<result column="status" property="status" jdbcType="TINYINT" /> 
		<result column="createTime" property="createTime" jdbcType="TIMESTAMP" /> 
		<result column="updateTime" property="updateTime" jdbcType="TIMESTAMP" /> 
	</resultMap>
	
	<sql id="Base_Column_List" >
	 	groupId, creatorUid, groupName, memNum, status, createTime, updateTime
	</sql>
	
	<insert id="create" parameterType="map" useGeneratedKeys="true" keyProperty="groupId" >
		INSERT INTO jctx_group_info
		
			(creatorUid, groupName, memNum, status, createTime)
		
		VALUES
			
			(#{uid}, #{grpName}, 1, 1, now())
	</insert>
	 
	 
	 <select id="groupList" resultMap="BaseResultMap">
	 	SELECT <include refid="Base_Column_List" /> 
	 	
	 	FROM jctx_group_info
	 	
	 	<where>
	 		creatorUid = #{uid} AND
	 		
	 		status = 1
	 	</where>
	 	
	 </select>
	 
	 <select id="groupDetails" resultMap="BaseResultMap" parameterType="map">
	 	SELECT <include refid="Base_Column_List" /> 
	 	
	 	FROM jctx_group_info
	 	
	 	<where>
	 		creatorUid = #{uid} AND
	 		
	 		groupId = #{groupId} AND
	 		
	 		status = 1
	 	</where>
	 </select> 
	 
	 <update id="deleteGroup"  parameterType="map">
	 	UPDATE jctx_group_info
	 	
	 	<set>
	 		status = 2
	 	</set>
	 	
	 	<where>
	 		creatorUid = #{uid} AND
	 		
	 		groupId = #{groupId}
	 	</where>
	 </update>
	 
	 
	 <update id="syncGrpNum"  parameterType="java.lang.Integer">
	 	UPDATE jctx_group_info
	 	
	 	<set>
	 		memNum = (select count(1) from jctx_group_members where jctx_group_members.groupId = #{groupId})
	 	</set>
	 	
	 	<where> 
	 		groupId = #{groupId}
	 	</where>
	 </update> 
	 
	 <select id="listGroups"  parameterType="java.lang.Integer">
	 	SELECT <include refid="Base_Column_List" /> 
	 	
	 	FROM  jctx_group_info
	 	
	 	<where>
	 		groupId < #{value}
	 	</where>
	 	
	 	ORDER BY groupId DESC
	 	
	 	LIMIT 20
	 </select>
</mapper>