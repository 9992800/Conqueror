<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jctx.chat.friends.relation" >

	<resultMap id="BaseResultMap" type="com.jctx.chat.module.FriendsRelationShip" >
		<id column="uid" property="uid" jdbcType="INTEGER"/>
		<id column="fuid" property="fuid" jdbcType="INTEGER" /> 
		<result column="status" property="status" jdbcType="TINYINT" /> 
		<result column="createTime" property="createTime" jdbcType="TIMESTAMP" /> 
		<result column="updateTime" property="updateTime" jdbcType="TIMESTAMP" /> 
	</resultMap>
	
	<sql id="Base_Column_List" >
	 	uid, fuid, status, createTime, updateTime
	</sql>
	
	 
	 <insert id="recordApply"  parameterType="map" >
	 
	 	INSERT INTO jctx_friends_relation
	 	
	 		(uid, fuid, status)
	 		
	 	VALUES
	 	
	 		(#{uid}, #{fuid}, 0)
	 		
	 </insert>
	 
	 <update id="approveIt"  parameterType="map" >
	 	
	 	UPDATE jctx_friends_relation
	 	
	 	<set>
	 		status = 1
	 	</set>
	 	
	 	<where>
	 		uid = #{uid}    AND
	 		
	 		fuid = #{fuid}  AND
	 		
	 		status = 0
	 	</where>
	 	
	 </update>
	 
	 <insert id="addAsNewFriend" parameterType="map" >
	 
	 	INSERT INTO jctx_friends_relation
	 	
	 		(uid, fuid, status)
	 		
	 	VALUES
	 	
	 		(#{uid}, #{fuid}, 1)
	 </insert>
	 
	 
	 
	 <select id="getAllMyFriends" parameterType="java.lang.Integer"  resultMap="BaseResultMap">
	 	
	 	SELECT <include refid="Base_Column_List" /> 
	 	
	 	FROM jctx_friends_relation
	 	
	 	<where>
	 		uid = #{value} AND 
	 		
	 		status = 1
	 	</where>
	 	
	 </select>
	 
	 <delete id="delMyFriend" parameterType = "map">
	 
	 	DELETE FROM jctx_friends_relation
	 	
	 	<where>
	 		uid = #{uid} AND
	 		
	 		fuid = #{fuid} AND
	 		
	 		status = 1
	 	</where>
	 	
	 </delete>
	 
	 <update id="blockSomeOne" parameterType = "map">
	 
	 	UPDATE jctx_friends_relation
	 	
	 	<set>
	 		status = 2
	 	</set>
	 	
	 	<where>
	 		(uid = #{uid} AND fuid = #{fuid} ) OR
	 		
	 		(uid = #{fuid} AND fuid = #{uid} )
	 	</where>
	 	
	 </update>
	 
</mapper>