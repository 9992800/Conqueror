package com.jctx.chat.module;

import java.util.HashMap;

import org.springframework.stereotype.Component;

@Component
public class OnlineUsersManager extends HashMap<String, OnlineUserEntity>{
	
	private static final long serialVersionUID = -7557693084400834486L;
	
	private static final int capacity = 10000;
	
	public OnlineUsersManager(){
		super(capacity);
	}

	public void OfflineUser(String userId){
		OnlineUserEntity entity = this.get(userId);
		entity.offline();
		this.remove(userId);
	}
	
	public void OnlineUser(String userId, OnlineUserEntity entity){
		entity.online();
		this.put(userId, entity);
	}
}
