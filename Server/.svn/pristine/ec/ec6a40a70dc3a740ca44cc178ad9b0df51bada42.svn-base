<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jctx.chat.chatgroup.details" >

	<resultMap id="BaseResultMap" type="com.jctx.chat.module.ChatGroupMemBean" >
		<id column="groupId" property="groupId" jdbcType="INTEGER" />
		<id column="uid" property="uid" jdbcType="INTEGER" /> 
		<result column="createTime" property="createTime" jdbcType="TIMESTAMP" /> 
		<result column="updateTime" property="updateTime" jdbcType="TIMESTAMP" /> 
	</resultMap>
	
	<sql id="Base_Column_List" >
	 	id, groupId, uid, createTime
	</sql>
	
	<insert id="addmember" parameterType="map">
		INSERT INTO jctx_group_members
		
			(groupId, uid, createTime)
		
		VALUES
			
			(#{groupId}, #{uid}, now())
	</insert>
	
	<insert id="addmembers" parameterType="map">
		INSERT INTO jctx_group_members(groupId, uid, createTime) 
		
		VALUES
		
		<foreach collection="uids" item="item" index="index" separator=",">
			(
				#{groupId},	#{item}
			)
		</foreach>
	</insert>
	
	<delete id="delAllmembers" parameterType="java.lang.Integer">
		DELETE FROM jctx_group_members
		
		<where>
			groupId = #{groupId}
		</where>
	</delete>
	
	<select id="listMembers" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		SELECT <include refid="Base_Column_List" /> 
		
		FROM jctx_group_members
		
		<where>
			groupId = #{groupId}
		</where>
	</select>
	
	
	<delete id="delmembers" parameterType="java.lang.Integer" parameterType="map">
		DELETE FROM jctx_group_members
		
		<where>
			groupId = #{groupId} AND
			
			uid in 
			
			<foreach collection="uids" item="item" open="(" close=")" index="index" separator=","> 	
				#{item}
			</foreach>
		</where>
		
	</delete>
	
	
</mapper>